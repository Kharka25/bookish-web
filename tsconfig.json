{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "module": "ES2022",
    "rootDir": "./",
    "moduleResolution": "node",
    "types": ["jest", "node", "ts-jest"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@constants/*": ["src/constants/*"],
      "@config/*": ["src/config/*"],
      "@globals/*": ["src/globals/*"],
      "@pages": ["src/pages"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json", "test/**/*"],
  "exclude": ["node_modules"]
}
